#!/usr/bin/env zsh
set -euo pipefail

curl -L https://github.com/phiresky/ripgrep-all/releases/download/v0.9.6/ripgrep_all-v0.9.6-x86_64-unknown-linux-musl.tar.gz | tar -xz && mv ./ripgrep_all-v0.9.6-x86_64-unknown-linux-musl/rga "$HOME/.local/bin" && rm -rf ripgrep_all-v0.9.6-x86_64-unknown-linux-musl*

